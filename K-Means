library(ggplot2)
data(iris)
iris_data <- iris[, -5]
set.seed(123)  # For reproducibility
kmeans_result <- kmeans(iris_data, centers = 3, nstart = 25)
iris$Cluster <- as.factor(kmeans_result$cluster)
ggplot(iris, aes(x = Sepal.Length, y = Sepal.Width, color = Cluster)) + geom_point(size = 3) + labs(title = "K-Means Clustering on Iris Dataset", x = "Sepal Length", y = "Sepal Width")
